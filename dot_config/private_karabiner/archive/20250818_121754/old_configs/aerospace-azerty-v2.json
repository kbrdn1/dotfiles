      "manipulators": [
        {
          "description": "Bloquer Alt gauche + 1 (workspace 1)",
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": []
        },
        {
